{
    "fields": [
        {
            "name": "day_id",
            "type": "integer#unsigned"
        },
        {
            "name": "worktimetype_id",
            "type": "integer#unsigned"
        }, 
        {
            "name": "start",
            "type": "time"
        },  {
            "name": "end",
            "type": "time#nullable"
        },
          {
            "name": "hour",
            "type": "integer"
        },
        {
            "name": "managernote",
            "type": "string#nullable"
        },
        
        {
            "name": "workernote",
            "type": "string#nullable"
        }
    ],
    
    "relationships": [
        {
            "name": "day",
            "type": "belongsTo",
