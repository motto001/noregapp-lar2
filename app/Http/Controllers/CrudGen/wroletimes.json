        {
            "field": "start",       "rules": "required|time"
        },
        {
            "field": "end",       "rules": "time"
        },
        {
            "field": "hour",       "rules": "required|integer|max:24"
        },
        {
            "field": "managernote",       "rules": "string|max:200"
        },
        {
            "field": "workernote",       "rules": "string|max:200"
        },
        {
            "field": "pub",       "rules": "integer"
        }
    ]
}